{
  "name": "fw2/glimpse",
  "description": "A lightweight static reflection library for PHP.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Roman Sokharev",
      "email": "greabock@gmail.com"
    }
  ],
  "require": {
    "nikic/php-parser": "^5.4"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^3.7",
    "pestphp/pest-plugin-type-coverage": "^3.5",
    "phpstan/phpstan": "^2.1",
    "slevomat/coding-standard": "^8.17",
    "squizlabs/php_codesniffer": "^3.12",
    "symfony/var-dumper": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "Fw2\\Glimpse\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
